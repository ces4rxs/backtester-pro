{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmitOnError": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": [
    "src/server_ai.ts",
    "src/server_render.ts",
    "src/routes/**/*"
  ],
  "exclude": [
    "src/test",
    "src/validate",
    "src/warehouse",
    "src/run*"
  ]
}
