{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": [
    "src/server_ai.ts",
    "src/routes/**/*.ts",
    "src/data/**/*.ts"
  ],
  "exclude": [
    "src/tools",
    "src/tests"
  ]
}
