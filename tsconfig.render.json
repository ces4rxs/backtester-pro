{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": ["src/server_unified.ts"],
  "exclude": ["src/tests", "src/tools", "src/ai"]
}
