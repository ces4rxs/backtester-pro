{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noImplicitAny": false,
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": [
    "src/ai/**/*",
    "src/core/**/*",
    "src/core_v5/**/*",
    "src/data/**/*",
    "src/tools/**/*",
    "src/learn/**/*",
    "src/validate/**/*",
    "src/strategies/**/*",
    "src/reports/**/*",
    "src/test/**/*",
    "src/run*.ts",
    "src/report*.ts",
    "node_modules",
    "dist",
    "prisma"
  ]
}
