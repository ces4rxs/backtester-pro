{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": [
    "src/server_unified.ts",
    "src/routes/**/*",
    "src/warehouse/**/*"
  ],
  "exclude": [
    // ðŸ”’ Exclusiones crÃ­ticas de producciÃ³n
    "node_modules",
    "prisma",
    "dist",

    // ðŸ§© MÃ³dulos internos que no deben compilarse en render
    "src/ai/**/*",
    "src/core/**/*",
    "src/core_v5/**/*",
    "src/data/**/*",
    "src/tools/**/*",
    "src/learn/**/*",
    "src/validate/**/*",
    "src/strategies/**/*",
    "src/reports/**/*",
    "src/test/**/*",

    // ðŸš« Scripts locales de desarrollo y pruebas
    "src/run*.ts",
    "src/report*.ts",
    "src/adaptive_report_summary.json"
  ]
}
