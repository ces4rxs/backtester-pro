{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node"]
  },
  "include": [
    "src/server_ai.ts",
    "src/routes/**/*"
  ],
  "exclude": [
    "src/ai",
    "src/core",
    "src/data",
    "src/learn",
    "src/tools",
    "src/test",
    "src/validate",
    "src/warehouse",
    "src/strategies",
    "src/utils",
    "src/run*"
  ]
}
