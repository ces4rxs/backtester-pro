{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmitOnError": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/server_render.ts",
    "src/routes/**/*"
  ],
  "exclude": [
    "src/ai",
    "src/core",
    "src/data",
    "src/learn",
    "src/tools",
    "src/test",
    "src/validate",
    "src/warehouse",
    "src/strategies",
    "src/utils",
    "src/run*"
  ]
}
