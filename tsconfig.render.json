{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "types": ["node"],
    "esModuleInterop": true
  },
  "include": [
    "src/server_unified.ts",
    "src/routes/**/*",
    "src/warehouse/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "prisma",
    "ai/**/*",
    "core/**/*",
    "core_v5/**/*",
    "data/**/*",
    "tools/**/*",
    "learn/**/*",
    "validate/**/*",
    "strategies/**/*",
    "reports/**/*",
    "test/**/*",
    "run*.ts",
    "report*.ts",
    "adaptive_report_summary.json"
  ]
}
