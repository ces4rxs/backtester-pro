{
  "compilerOptions": {
    /* ðŸ”§ ConfiguraciÃ³n base de compilaciÃ³n */
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",

    /* ðŸ“¦ Compatibilidad moderna */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,

    /* ðŸš€ Rendimiento y estabilidad */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* ðŸ§  Tipado */
    "types": ["node"],
    "strict": false,
    "noImplicitAny": false
  },

  /* âœ… Solo compilamos el backend unificado */
  "include": [
    "src/server_unified.ts",
    "src/routes/**/*",
    "src/warehouse/**/*"
  ],

  /* ðŸ§¹ Excluimos todo lo que no es parte del backend principal */
  "exclude": [
    "node_modules",
    "dist",
    "prisma",
    "src/ai/**/*",
    "src/core/**/*",
    "src/core_v5/**/*",
    "src/data/**/*",
    "src/tools/**/*",
    "src/learn/**/*",
    "src/validate/**/*",
    "src/strategies/**/*",
    "src/reports/**/*",
    "src/test/**/*",
    "src/run*.ts",
    "src/report*.ts",
    "adaptive_report_summary.json"
  ]
}
